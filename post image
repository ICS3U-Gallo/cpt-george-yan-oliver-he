
import arcade

WIDTH = 800
HEIGHT = 800

arcade.open_window(WIDTH, HEIGHT, "My Drawing")
arcade.set_background_color(arcade.color.WHITE)

arcade.start_render()
# Begin drawing
x = 200
arcade.draw_rectangle_filled(200,800-x/2,100,x,arcade.color.BROWN)
arcade.draw_rectangle_filled(200,(700-x)/2,100,700-x,arcade.color.BROWN)

# End drawing
arcade.finish_render()
arcade.run()

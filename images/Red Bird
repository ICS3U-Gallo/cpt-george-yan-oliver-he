import arcade
import random

width = 800
height = 800
x = 200
y = 600
xlocation = 400
xsize = 30
ysize = random.randint(10, 440)
ylocation = ysize/2
gap = 50
ylocation_2 = (height - ysize - gap)/2
ysize_2 = height - ysize - gap

def main():
    arcade.open_window(width, height,"game")
    arcade.set_background_color(arcade.color.WHITE)
    arcade.start_render()
    ball(x,y)
    first_post(xlocation,ylocation,xsize,ysize)
    second_post(xlocation, ylocation_2, xsize, ysize_2)
    arcade.finish_render()
    arcade.run()

def first_post(xlocarion, ylocarion, xsize, ysize):
    arcade.draw_rectangle_filled(xlocation, ylocation, xsize, ysize, arcade.color.BROWN)

def second_post(xlocation, ylocation_2, xsize, ysize_2):
    arcade.draw_rectangle_filled(xlocation, ylocation_2, xsize, ysize_2, arcade.color.BROWN)

def ball(x,y):
    arcade.draw_circle_filled(x,y,20,arcade.color.BLUE)

def end():
    arcade.draw_text("Game Over", width/2, height/2, arcade.color.RED, font_size = 40, anchor_x="center")

if __name__ == '__main__':
    main()

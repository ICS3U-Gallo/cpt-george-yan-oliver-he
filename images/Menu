import arcade

WIDTH = 900

HEIGHT = 700


menu = "menu"


bird_x = 0


def location(x):

    global bird_x

    if menu == "play":

        bird_x += 1



def draw():

    arcade.start_render()

    if menu == "menu":
        draw_menu()

    elif menu == "instructions":
        draw_instructions()

    elif menu == "play":
        draw_play()





def key_press(key, modifiers):

    global menu



    if menu == "menu":

        menu_keybinds(key, modifiers)

    elif menu == "instructions":

        instructions_keybinds(key, modifiers)

    elif menu == "play":

        play_keybinds(key, modifiers)





def menu_keybinds(key, modifiers):

    global menu

    if key == arcade.key.SPACE:

        menu = "instructions"

    elif key == arcade.key.ENTER:

        menu = "play"

    elif key == arcade.key.ESCAPE:

        exit()





def instructions_keybinds(key, modifiers):

    global menu

    if key == arcade.key.ESCAPE:

        menu = "menu"





def play_keybinds(key, modifiers):

    global menu

    if key == arcade.key.ESCAPE:

        menu = "menu"





def on_key_release(key, modifiers):

    pass





def on_mouse_press(x, y, button, modifiers):

    pass





def start():

    arcade.open_window(WIDTH, HEIGHT, "My Arcade Game")

    arcade.set_background_color(arcade.color.BLACK)

    arcade.schedule(location, 1/60)


    window = arcade.get_window()

    window.on_draw = draw

    window.on_key_press = key_press

    window.on_key_release = on_key_release

    window.on_mouse_press = on_mouse_press



    arcade.run()





def draw_menu():

    arcade.set_background_color(arcade.color.BLACK)

    arcade.draw_text("Flippy Bird", WIDTH/2, HEIGHT/1.3,

                     arcade.color.WHITE, font_size=30, anchor_x="center")

    arcade.draw_text("ENTER to Play", WIDTH/2, HEIGHT/1.8,

                     arcade.color.WHITE, font_size=40, anchor_x="center")

    arcade.draw_text("SPACE for Instructions", WIDTH/2, HEIGHT/2.3,

                     arcade.color.WHITE, font_size=40, anchor_x="center")







def draw_instructions():

    arcade.set_background_color(arcade.color.BLACK)

    arcade.draw_text("Instructions", WIDTH/2, HEIGHT/1.2,

                     arcade.color.WHITE, font_size=50, anchor_x="center")

    arcade.draw_text("Press Space to make bird fly up and pass through the pipes", WIDTH/2, HEIGHT/2,

                     arcade.color.WHITE, font_size=27, anchor_x="center")

    arcade.draw_text("ESC to go back", WIDTH/2, HEIGHT/2.9,

                     arcade.color.WHITE, font_size=20, anchor_x="center")





def draw_play():

    arcade.set_background_color(arcade.color.BLACK)





if __name__ == '__main__':

    start()
